<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.jetsetgo.service.SupportMapper">

    <resultMap type="kr.co.jetsetgo.model.SupportDto"
               id="supportDto">
        <id column="SUPPORT_ID" property="supportNum" />
        <result column="WRITER_ID" property="authorNum" />
        <result column="NUM" property="num" />
        <result column="TITLE" property="title" />
        <result column="DETAIL" property="detail" />
        <result column="WRITER_NAME" property="author" />
        <result column="CREATED_DATE" property="createdDate" />
        <result column="ANSWER" property="answer" />
        <result column="PUBLIC" property="isPublic" />
        <result column="CATEGORY" property="category" />
    </resultMap>

    <select id="findById" resultMap="supportDto">
        SELECT * FROM support WHERE SUPPORT_ID = #{id}
    </select>

    <!-- 추가적인 SQL 매핑 정의 -->
</mapper>